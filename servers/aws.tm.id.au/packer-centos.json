{

  "_see": "https://www.packer.io/docs/builders/amazon-ebs.html",
  "_notes": "'owners' value refers to CentOS.",
  "builders": [{

    "type": "amazon-ebs",
    "region": "ap-southeast-2",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "packer centos.tm.id.au {{timestamp}}",

    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/hvm-ssd/ubuntu-*-16.04-amd64-server-*",
        "root-device-type": "ebs"
      },

      "owners": ["679593333241"],
      "most_recent": true
    }

  }],

  "_see": "https://www.packer.io/docs/provisioners/ansible.html",
  "provisioners": [{
    "type": "ansible",
    "playbook_file": "./centos.yml"
  }]

}
